bootstrapversion = "v2.1.3"

mixin style(filename)
	if !production
		link(rel="stylesheet/less", href="/less/" + filename + ".less")
	else
		link(rel="stylesheet", href="/css/" + filename + ".css")

html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		link(rel="shortcut icon", href="//s3.amazonaws.com/bv-bootstrap/misc/favicon.ico")

		block title
			title PuzzleBox

		link(rel='stylesheet', href='//s3.amazonaws.com/bv-bootstrap/#{bootstrapversion}/css/bootstrap.min.css')
		link(rel='stylesheet', href='//s3.amazonaws.com/bv-bootstrap/#{bootstrapversion}/css/bootstrap-responsive.min.css')
		
		block styles
			mixin style('index')
		
		if !production
			script(type="text/javascript", src="/js/less.min.js")

		script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
		block scripts

	body(data-csrf=token)
		.navbar.navbar-portal.navbar-inverse.navbar-fixed-top
			.navbar-inner
				.container-fluid
					h1 PuzzleBox
					
		.container-fluid.container-main

			.row-fluid
				block content